        // Testcase No. 12
        A = 1; B = 0; S1 = 0; S0 = 1; S2 = 1; #10;
        
        // Testcase No. 13
        A = 1; B = 1; S1 = 0; S0 = 0; S2 = 0; #10;
        // Testcase No. 14
        A = 1; B = 1; S1 = 0; S0 = 0; S2 = 1; #10;
